generator client {
  provider      = "prisma-client-js"
binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  doctorId     Int?
  doctor       Doctor?   @relation("DoctorRooms", fields: [doctorId], references: [id], onDelete: Cascade)
  patientName  String
  messages     Message[]
  status       String    @default("active")
}

model Message {
  id        String    @id @default(uuid())
  roomId    String
  room      Room      @relation(fields: [roomId], references: [id])
  type      String
  content   String
  createdAt DateTime  @default(now())
  doctorId  Int?
  doctor    Doctor?   @relation("DoctorMessages", fields: [doctorId], references: [id], onDelete: Cascade)
}

model Doctor {
  id          Int       @id @default(autoincrement())
  imageUrl    String
  name        String
  externalUrl String
  userId      Int       @unique
  user        Doctor      @relation(fields: [userId], references: [id])
  rooms       Room[]    @relation("DoctorRooms")
  messages    Message[] @relation("DoctorMessages")
  description String?
}

model Doctor {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  doctor   Doctor?
  role     String @default("doctor")
}
